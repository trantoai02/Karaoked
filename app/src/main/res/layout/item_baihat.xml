<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtMaBH"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00FF00"
        android:gravity="center"
        android:text="66666"
        android:textColor="#FF0000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnThich"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTenBH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Tên bài hát"
        android:textColor="#0d34ab"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMaBH"
        app:layout_constraintTop_toTopOf="@+id/txtMaBH" />

    <TextView
        android:id="@+id/txtTacGia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Tác giả"
        android:textColor="#6c0bcd"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtTenBH"
        app:layout_constraintTop_toBottomOf="@+id/txtTenBH" />

    <ImageButton
        android:id="@+id/btnThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnBoThich"
        app:layout_constraintTop_toBottomOf="@+id/txtTacGia"
        app:srcCompat="@drawable/ic_like" />

    <ImageButton
        android:id="@+id/btnBoThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnChitiet"
        app:layout_constraintTop_toBottomOf="@+id/txtTacGia"
        app:srcCompat="@drawable/ic_dislike" />

    <ImageButton
        android:id="@+id/btnChitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnXoa"
        app:layout_constraintTop_toBottomOf="@+id/txtTacGia"
        app:srcCompat="@drawable/ic_details" />

    <ImageButton
        android:id="@+id/btnXoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTacGia"
        app:srcCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="#ab0ffe03"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnXoa" />
</androidx.constraintlayout.widget.ConstraintLayout>

